---
global:
  diagnosis:
    - name: Metrics Collector - Response Based Throttling
      enabled: true
      config:
        metrics_collector:
          counters:
            - name_suffix: "Retry-After"
              payload: "response_headers"
              key: "Retry-After"
          response_header_names:
            - X-Lunar-Generated
      export: "prometheus"

  remedies:
    - name: Global Throttling Management
      enabled: false
      config:
        response_based_throttling:
          retry_after_header: Retry-After
          retry_after_type: relative_seconds
          quota_group: 1
          relevant_statuses:
            - 429

exporters:
  prometheus: {}
